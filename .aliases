function findf {
    find . -type f -iname "*${@}*"
}

function findf0 {
    find . -type f -iname "*${@}*" -print0
}

function gsq {
    git reset --soft ${1}~1 && git commit --edit -m"$(git log --format=%B --reverse HEAD..HEAD@{1})"
}

alias ll='ls -l'

alias g='git'
alias gu='git update'
alias gb='git branch'
alias gs='git status'
alias ga='git add -A'
alias gr='git rm'
alias gc='git commit -m'
alias gl='git log'
alias gd='git diff HEAD'
alias gp='git pull'
alias gca='git commit --amend'
alias gch='git checkout'
alias gpp='git pull && git push'
alias gbc="git branch | grep '*' | cut -d' ' -f 2-"
alias gra='git rm $(git ls-files -d)'
alias gst='git stash'
alias gss='git stash save "snapshot: $(date)" && git stash apply "stash@{0}"'
alias gstp='git stash pop'
alias gstl='git stash list'

alias ..='cd ..'
alias .='cd .'
alias -- -='cd -'
